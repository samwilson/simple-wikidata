{
    "name": "samwilson/simple-wikidata",
    "description": "A very simplistic library for interacting with Wikidata in PHP.",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Sam Wilson",
            "email": "sam@samwilson.id.au"
        }
    ],
    "autoload": {
        "psr-4": {
            "Samwilson\\SimpleWikidata\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Samwilson\\SimpleWikidata\\Tests\\": "tests/"
        }
    },
    "require": {
        "ext-json": "*",
        "mediawiki/oauthclient": "^1.0",
        "addwiki/mediawiki-api-base": "^2.0",
        "symfony/dom-crawler": "^4.0",
        "psr/cache": "^1.0",
        "nayjest/str-case-converter": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.2",
        "mediawiki/mediawiki-codesniffer": "^26.0",
        "tedivm/stash": "^0.15"
    }
}
